<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller2">
    <children>
        <VBox>
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter URL and select what metrics you want displayed">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                    <font>
                        <Font name="Arial" size="18.0" />
                    </font>
                </Text>
                <HBox prefHeight="25.0">
                    <children>
                        <TextField fx:id="uRLfield" onAction="#getURL" prefWidth="370.0" promptText="https://github.com/CSC131Fall2018/Group2.git" />
                        <Region prefWidth="9.0" />
                  <Button fx:id="addRepo" mnemonicParsing="false" onAction="#addRepoClicked" text="Add Repo" />
                        <Button fx:id="goButton" mnemonicParsing="false" onAction="#onClick" text="GO">
                            <HBox.margin>
                                <Insets left="5.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </VBox.margin>
                </HBox>
                <HBox prefWidth="200.0">
                    <children>
                        <VBox>
                            <children>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Metrics">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Text>
                                <CheckBox mnemonicParsing="false" text="Comment line count">
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin></CheckBox>
                                <CheckBox fx:id="checkBox1" mnemonicParsing="false" onAction="#box1" text="Word Count">
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin></CheckBox>
                                <CheckBox fx:id="checkBox3" mnemonicParsing="false" onAction="#box3" text="Character Count">
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin></CheckBox>
                                <CheckBox fx:id="checkBox2" mnemonicParsing="false" onAction="#box2" text="Line Count">
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin></CheckBox>
                                <CheckBox mnemonicParsing="false" text="Sorce Line Count">
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin></CheckBox>
                            </children></VBox>
                        <VBox>
                            <children>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Types of Files">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Text>
                                <CheckBox fx:id="checkBoxj" mnemonicParsing="false" onAction="#jChecked" text="Java">
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin></CheckBox>
                                <CheckBox fx:id="checkBoxC" mnemonicParsing="false" onAction="#cChecked" text="C">
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin></CheckBox>
                        <CheckBox fx:id="checkBoxCpp" mnemonicParsing="false" onAction="#cppChecked" text="C++">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </CheckBox>
                            </children>
                            <padding>
                                <Insets left="10.0" />
                            </padding>
                        </VBox>
                          <CheckBox fx:id="checkBox4" mnemonicParsing="false" onAction="#box4" text="Single File Mode">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </CheckBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" />
                    </padding>
                </HBox>
            </children></VBox>
    </children>
</AnchorPane>
